<h1>Добро пожаловать, преподаватель!</h1>

<table>
    <tr>
        <td>Фамилия</td>
        <td>@ViewBag.Surname</td>
    </tr>

    <tr>
        <td>Имя</td>
        <td>@ViewBag.Name</td>
    </tr>

    <tr>
        <td>Отчество</td>
        <td>@ViewBag.SecondName</td>
    </tr>
</table>

<form asp-action="ShowPredmTeach" asp-controller="Teacher">
    <div class="form-group">
        <input type="submit" value="Показать предметы" class="btn btn-default" />
    </div>
</form>

<form asp-action="ShowGrade1" asp-controller="Teacher">
    <div class="form-group">
        <input type="submit" value="Показать оценки" class="btn btn-default" />
    </div>
</form>

<form asp-action="SetGrade1" asp-controller="Teacher">
    <div class="form-group">
        <input type="submit" value="Выставить оценки" class="btn btn-default" />
    </div>
</form>

<form asp-action="ShowGroups" asp-controller="Teacher">
    <div class="form-group">
        <input type="submit" value="Показать список групп" class="btn btn-default" />
    </div>
</form>