@{
    int i = 0;
}
<h1>Список всех преподавателей</h1>
<table class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in ViewBag.Teachers)
   {
       <tr>
           <td>@(i = i + 1)</td>
           <td>@item.Surname</td>
           <td>@item.Name</td>
           <td>@item.SecondName</td>
       </tr>
   }
   </tbody>
</table>